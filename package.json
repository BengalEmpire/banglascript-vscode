{
  "name": "banglascript",
  "displayName": "BanglaScript",
  "description": "Bangla programming language support - বাংলায় কোডিং করুন!",
  "version": "1.0.0",
  "publisher": "BengalEmpire",
  "author": {
    "name": "Mahmud Rahman",
    "email": "dev@devplus.fun"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BengalEmpire/banglascript-vscode"
  },
  "bugs": {
    "url": "https://github.com/BengalEmpire/banglascript-vscode/issues"
  },
  "homepage": "https://github.com/BengalEmpire/banglascript-vscode#readme",
  "icon": "icons/extension-icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "bangla",
    "bengali",
    "banglascript",
    "বাংলা",
    "programming",
    "language"
  ],
  "activationEvents": [
    "onLanguage:banglascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "banglascript",
        "aliases": ["BanglaScript", "bjs"],
        "extensions": [".bjs"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/file_type_bjs.svg",
          "dark": "./icons/file_type_bjs.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "banglascript",
        "scopeName": "source.banglascript",
        "path": "./syntaxes/banglascript.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "banglascript",
        "path": "./snippets/banglascript.json"
      }
    ],
    "iconThemes": [
      {
        "id": "banglascript-icons",
        "label": "BanglaScript Icons",
        "path": "./icons/banglascript-icon-theme.json"
      }
    ],
    "themes": [
      {
        "label": "BanglaScript Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/BanglaScriptTheme.json"
      },
      {
        "label": "BanglaScript Light",
        "uiTheme": "vs",
        "path": "./themes/BanglaScriptLight.json"
      }
    ],
    "configuration": {
      "title": "BanglaScript",
      "properties": {
        "banglascript.enableSnippets": {
          "type": "boolean",
          "default": true,
          "description": "Enable BanglaScript code snippets"
        },
        "banglascript.showWelcomeMessage": {
          "type": "boolean",
          "default": true,
          "description": "Show welcome message when opening .bjs files"
        }
      }
    },
    "commands": [
      {
        "command": "banglascript.helloWorld",
        "title": "BanglaScript: Create Hello World Template"
      },
      {
        "command": "banglascript.showDocumentation",
        "title": "BanglaScript: Show Documentation"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "glob": "^8.1.0",
    "mocha": "^10.4.0",
    "typescript": "^5.3.3",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0"
  }
}