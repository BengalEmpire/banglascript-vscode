{
  "name": "banglascript",
  "displayName": "BanglaScript",
  "description": "Syntax highlighting, snippets, and basic support for BanglaScript (.bjs files)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": ["Programming Languages"],
  "contributes": {
    "languages": [
      {
        "id": "banglascript",
        "aliases": ["BanglaScript", "bjs"],
        "extensions": ["bjs"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "banglascript",
        "scopeName": "source.banglascript",
        "path": "./syntaxes/banglascript.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "banglascript",
        "path": "./snippets/banglascript.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:banglascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "BanglaScript",
      "properties": {
        "banglascript.enableSnippets": {
          "type": "boolean",
          "default": true,
          "description": "Enable BanglaScript snippets"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "glob": "^8.1.0",
    "mocha": "^10.4.0",
    "typescript": "^5.3.3",
    "@vscode/test-electron": "^2.3.8"
  }
}